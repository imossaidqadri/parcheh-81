{% if section.settings.show_footer %}
<!-- Structured Data for Organization -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "{{ shop.name }}",
  "url": "{{ shop.secure_url }}",
  {% if section.settings.instagram_url != blank or section.settings.facebook_url != blank or section.settings.twitter_url != blank %}
  "sameAs": [
    {% if section.settings.instagram_url != blank %}"{{ section.settings.instagram_url }}"{% if section.settings.facebook_url != blank or section.settings.twitter_url != blank %},{% endif %}{% endif %}
    {% if section.settings.facebook_url != blank %}"{{ section.settings.facebook_url }}"{% if section.settings.twitter_url != blank %},{% endif %}{% endif %}
    {% if section.settings.twitter_url != blank %}"{{ section.settings.twitter_url }}"{% endif %}
  ],
  {% endif %}
  {% if section.settings.developer_url != blank and section.settings.developer_name != blank %}
  "founder": {
    "@type": "Organization",
    "name": "{{ section.settings.developer_name }}",
    "url": "{{ section.settings.developer_url }}"
  }
  {% endif %}
}
</script>

<div id="footer">
  <footer class="footer cta" 
         style="background-color: {{ section.settings.footer_background_color | default: '#000000' }}; color: {{ section.settings.footer_text_color | default: '#ffffff' }};"
         role="contentinfo"
         aria-label="Site footer">
    
    <!-- Mobile & Tablet Layout -->
    <div class="md:hidden p-[15px] sm:p-[30px]">
      <div class="grid grid-cols-2 sm:grid-cols-4 gap-[15px]">
        
        <!-- Copyright Section -->
        <div class="col-span-2 sm:col-span-4 mb-4">
          {{ section.settings.copyright_text | default: shop.name }}
          {% if section.settings.made_with_love_text != blank and section.settings.developer_name != blank %}
            {{ section.settings.made_with_love_text }} 
            {% if section.settings.developer_url != blank %}
              <a href="{{ section.settings.developer_url }}" target="_blank" rel="noopener" class="inline align-middle no-underline hover:underline" aria-label="Visit {{ section.settings.developer_name }} website">{{ section.settings.developer_name }}</a>
            {% else %}
              {{ section.settings.developer_name }}
            {% endif %}
          {% endif %}
        </div>

        <!-- Store Section -->
        {% if section.settings.show_store_section and section.settings.store_title != blank %}
        <div>
          <div class="font-bold pb-2">{{ section.settings.store_title }}</div>
          <div class="pb-5 pt-2 flex flex-col gap-1 font-normal">
            {% if linklists[section.settings.store_menu] and linklists[section.settings.store_menu].links.size > 0 %}
              {% for link in linklists[section.settings.store_menu].links %}
                <a href="{{ link.url }}" title="{{ link.title | escape }}" aria-label="{{ link.title | escape }}">{{ link.title }}</a>
              {% endfor %}
            {% else %}
              <!-- Fallback links if menu is not configured -->
              <a href="{{ routes.search_url }}" title="Search" aria-label="Search products">Search</a>
            {% endif %}
          </div>
        </div>
        {% endif %}

        <!-- Social Media Section -->
        {% if section.settings.show_social_section and section.settings.social_title != blank %}
        <div>
          <div class="font-bold pb-2">{{ section.settings.social_title }}</div>
          <div class="pb-5 pt-2 flex flex-col gap-1 font-normal">
            {% if section.settings.instagram_url != blank %}
              <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" title="Follow us on Instagram" aria-label="Follow {{ shop.name }} on Instagram">Instagram</a>
            {% endif %}
            {% if section.settings.facebook_url != blank %}
              <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" title="Follow us on Facebook" aria-label="Follow {{ shop.name }} on Facebook">Facebook</a>
            {% endif %}
            {% if section.settings.twitter_url != blank %}
              <a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener" title="Follow us on Twitter" aria-label="Follow {{ shop.name }} on Twitter">Twitter</a>
            {% endif %}
            {% if section.settings.youtube_url != blank %}
              <a href="{{ section.settings.youtube_url }}" target="_blank" rel="noopener" title="Follow us on YouTube" aria-label="Follow {{ shop.name }} on YouTube">YouTube</a>
            {% endif %}
          </div>
        </div>
        {% endif %}

        <!-- Customer Care Section -->
        {% if section.settings.show_customer_care_section and section.settings.customer_care_title != blank %}
        <div>
          <div class="font-bold pb-2">{{ section.settings.customer_care_title }}</div>
          <div class="pb-5 pt-2 flex flex-col gap-1 font-normal">
            {% if linklists[section.settings.customer_care_menu] and linklists[section.settings.customer_care_menu].links.size > 0 %}
              {% for link in linklists[section.settings.customer_care_menu].links %}
                <a href="{{ link.url }}" title="{{ link.title | escape }}" aria-label="{{ link.title | escape }}">{{ link.title }}</a>
              {% endfor %}
            {% else %}
              <!-- Fallback links if menu is not configured -->
              <a href="{{ routes.account_url }}" title="My Account" aria-label="My Account">Account</a>
              {% if shop.customer_accounts_enabled %}
                <a href="{{ routes.account_login_url }}" title="Login" aria-label="Customer Login">Login</a>
              {% endif %}
            {% endif %}
          </div>
        </div>
        {% endif %}

      </div>
    </div>

    <!-- Desktop Layout -->
    <div class="hidden md:grid grid-cols-12 items-end gap-[15px] px-[30px] pb-[15px] pt-[150px]">
      
      <!-- Decorative Stripes -->
      {% if section.settings.show_decorative_stripes %}
      <div class="col-span-2 -ml-[30px]">
        <div class="w-full flex flex-col self-end gap-[15px]" aria-hidden="true">
          <div class="stripe"></div>
          <div class="stripe"></div>
          <div class="stripe"></div>
          <div class="stripe"></div>
          <div class="stripe"></div>
        </div>
      </div>
      {% endif %}
      
      <!-- Copyright Section -->
      <div class="{% if section.settings.show_decorative_stripes %}col-span-3{% else %}col-span-5{% endif %}">
        {{ section.settings.copyright_text | default: shop.name }}
        {% if section.settings.made_with_love_text != blank and section.settings.developer_name != blank %}
          {{ section.settings.made_with_love_text }} 
          {% if section.settings.developer_url != blank %}
            <a href="{{ section.settings.developer_url }}" target="_blank" rel="noopener" class="inline align-middle no-underline hover:underline" aria-label="Visit {{ section.settings.developer_name }} website">{{ section.settings.developer_name }}</a>
          {% else %}
            {{ section.settings.developer_name }}
          {% endif %}
        {% endif %}
      </div>
      
      <!-- Navigation Links -->
      <div class="{% if section.settings.show_decorative_stripes %}col-span-7{% else %}col-span-7{% endif %} flex gap-[15px] justify-end text-right">
        
        <!-- Store Links -->
        {% if section.settings.show_store_section %}
          {% if linklists[section.settings.store_menu] and linklists[section.settings.store_menu].links.size > 0 %}
            {% for link in linklists[section.settings.store_menu].links %}
              <div><a href="{{ link.url }}" title="{{ link.title | escape }}" aria-label="{{ link.title | escape }}">{{ link.title }}</a></div>
            {% endfor %}
          {% else %}
            <div><a href="{{ routes.search_url }}" title="Search" aria-label="Search products">Search</a></div>
          {% endif %}
        {% endif %}

        <!-- Social Links -->
        {% if section.settings.show_social_section %}
          {% if section.settings.instagram_url != blank %}
            <div><a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" title="Follow us on Instagram" aria-label="Follow {{ shop.name }} on Instagram">Instagram</a></div>
          {% endif %}
          {% if section.settings.facebook_url != blank %}
            <div><a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" title="Follow us on Facebook" aria-label="Follow {{ shop.name }} on Facebook">Facebook</a></div>
          {% endif %}
          {% if section.settings.twitter_url != blank %}
            <div><a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener" title="Follow us on Twitter" aria-label="Follow {{ shop.name }} on Twitter">Twitter</a></div>
          {% endif %}
          {% if section.settings.youtube_url != blank %}
            <div><a href="{{ section.settings.youtube_url }}" target="_blank" rel="noopener" title="Follow us on YouTube" aria-label="Follow {{ shop.name }} on YouTube">YouTube</a></div>
          {% endif %}
        {% endif %}

        <!-- Customer Care Links -->
        {% if section.settings.show_customer_care_section %}
          {% if linklists[section.settings.customer_care_menu] and linklists[section.settings.customer_care_menu].links.size > 0 %}
            {% for link in linklists[section.settings.customer_care_menu].links %}
              <div><a href="{{ link.url }}" title="{{ link.title | escape }}" aria-label="{{ link.title | escape }}">{{ link.title }}</a></div>
            {% endfor %}
          {% else %}
            <div><a href="{{ routes.account_url }}" title="My Account" aria-label="My Account">Account</a></div>
            {% if shop.customer_accounts_enabled %}
              <div><a href="{{ routes.account_login_url }}" title="Login" aria-label="Customer Login">Login</a></div>
            {% endif %}
          {% endif %}
        {% endif %}
        
      </div>
    </div>
    
  </footer>
</div>
{% endif %}


